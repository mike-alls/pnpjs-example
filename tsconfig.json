{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "skipLibCheck": true
  },
  "exclude": [
    "logs",
    "node_modules",
    "sandbox",
    "test"
  ]
}
